{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "react",
      "styled-components"
    ],
    "paths": {
      "@/*": [ "src/*" ],
      "@styled/*": [ "src/styled-components/*" ],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}