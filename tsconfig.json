{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": true,
        "allowUnusedLabels": true,
        "baseUrl": "./",
        "outDir": "./dist/",
        "sourceMap": true,
        "declaration": false,
        "noImplicitAny": true,
        "inlineSources": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "esnext",
        "noEmit": false,
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "react",
            "node",
            "styled-components"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@my-app/*": [
                "./packages/*"
            ]
        },
        "pretty": true
    },
    "target": "esnext",

    "exclude": [
        "node_modules",
        "dist"
    ]
}
