{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "CommonJS",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "react",
            "node",
            "styled-components"
        ],
        "paths": {
            "@/*": ["src/*"],
            "@my-app/*": ["packages/*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
