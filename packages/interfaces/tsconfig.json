{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./",
        "sourceMap": false,
        "declaration": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "CommonJS",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "react",
            "styled-components"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
